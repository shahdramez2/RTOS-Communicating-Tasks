static void prvAutoReloadTimerCallback( TimerHandle_t xTimer )
{

	trace_puts("Auto-Reload timer callback executing");

	if(isOn(blinkLeds[0])){
		turn_off(&blinkLeds[0]);
	} else {
		turn_on(&blinkLeds[0]);
	}
}

