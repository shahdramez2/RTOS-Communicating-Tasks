// -----------------------------------------------------------
//
// Semihosting STM32F4 empty sample (trace via DEBUG).
//
// Trace support is enabled by adding the TRACE macro definition.
// By default the trace messages are forwarded to the DEBUG output,
// but can be rerouted to any device or completely suppressed, by
// changing the definitions required in system/src/diag/trace-impl.c
// (currently OS_USE_TRACE_ITM, OS_USE_TRACE_SEMIHOSTING_DEBUG/_STDOUT).
//


/*----------------------------------------------------------------Definitions-----------------------------------------------------------------------*/
#define Treceiver                                      100
#define MAX_STIRNG_LENGTH                              20
#define NUM_OF_RUNS                                    6
#define MAX_NUM_OF_RECEIVED_MESSAGES_PER_RUN           1000
#define QUEUE_SIZE                                     10
/*----------------------------------------------------------------Functions Prototypes-----------------------------------------------------------------------*/
static void prvSenderTimerCallback( TimerHandle_t xTimer );
static void prvReceiverTimerCallback( TimerHandle_t xTimer );


void senderTask1 (void* parameters);
void senderTask2 (void* parameters);
void senderTask3 (void* parameters);
void receiverTask (void* parameters);



void resetHandler (void);
void printingStatisticsOfSenderTasks (void);

void gameOver(void);

uint32_t generateRandomTsender (uint32_t minBound, uint32_t maxBound);

/*----------------------------------------------------------------Global Variables-----------------------------------------------------------------------*/
/* The Sender and receiver software timers */

static QueueHandle_t globalQueueHandle = NULL;

static TimerHandle_t xTimerSender1 = NULL;
static TimerHandle_t xTimerSender2 = NULL;
static TimerHandle_t xTimerSender3 = NULL;
static TimerHandle_t xTimerReceiver = NULL;

BaseType_t xTimerSender1Started, xTimerSender2Started, xTimerSender3Started, xTimerReceiverStarted;

TaskHandle_t xSender1Handle = NULL;
TaskHandle_t xSender2Handle = NULL;
TaskHandle_t xSender3Handle = NULL;
TaskHandle_t xReceiverHandle = NULL;

BaseType_t xSender1, xSender2, xSender3, xReceiver;

SemaphoreHandle_t xSemaphoreSender1;
SemaphoreHandle_t xSemaphoreSender2;
SemaphoreHandle_t xSemaphoreSender3;
SemaphoreHandle_t xSemaphoreReceiver;

/*Sender1 Counters */
uint32_t gNumOfSentMessagesOfSender1=0;
uint32_t gNumOfBlockedMessagesOfSender1=0;

/*Sender2 Counters */
uint32_t gNumOfSentMessagesOfSender2=0;
uint32_t gNumOfBlockedMessagesOfSender2=0;

/*Sender3 Counters */
uint32_t gNumOfSentMessagesOfSender3=0;
uint32_t gNumOfBlockedMessagesOfSender3=0;

/*receiver counter*/
uint32_t gNumOfReceivedMessages=0;

/*Tsender of each sender task*/
uint32_t gRandomTsender1;
uint32_t gRandomTsender2;
uint32_t gRandomTsender3;

uint32_t minBoundOfTsender[6] = {50, 80, 110, 140, 170, 200};
uint32_t maxBoundOfTsender[6] = {150, 200, 250, 300, 350, 400};


/* global variable to hold which iteration the program is now running */
uint8_t gCurrentRunNumber= 0;

// ----- main() ---------------------------------------------------------------

// Sample pragmas to cope with warnings. Please note the related line at
// the end of this function, used to pop the compiler diagnostics status.
#pragma GCC diagnostic push
#pragma GCC diagnostic ignored "-Wunused-parameter"
#pragma GCC diagnostic ignored "-Wmissing-declarations"
#pragma GCC diagnostic ignored "-Wreturn-type"

int
main(int argc, char* argv[])
{

	printf("Main function started\n");
#if 0
	// Add your code here.

	blinkLeds[0] = createLed(BLINK_PORT_NUMBER, BLINK_PIN_NUMBER_GREEN, BLINK_ACTIVE_LOW );
	blinkLeds[1] = createLed(BLINK_PORT_NUMBER, BLINK_PIN_NUMBER_ORANGE, BLINK_ACTIVE_LOW );
	blinkLeds[2] = createLed(BLINK_PORT_NUMBER, BLINK_PIN_NUMBER_RED, BLINK_ACTIVE_LOW );
	blinkLeds[3] = createLed(BLINK_PORT_NUMBER, BLINK_PIN_NUMBER_BLUE, BLINK_ACTIVE_LOW );

	for (int i=0; i<4; i++){
		power_up(&blinkLeds[i]);
	}

	xTimer1 = xTimerCreate( "Timer1", ( pdMS_TO_TICKS(2000) ), pdFALSE, ( void * ) 0, prvOneShotTimerCallback);
	xTimer2 = xTimerCreate( "Timer2", ( pdMS_TO_TICKS(1000) ), pdTRUE, ( void * ) 1, prvAutoReloadTimerCallback);

	if( ( xTimer1 != NULL ) && ( xTimer2 != NULL ) )
	{
		xTimer1Started = xTimerStart( xTimer1, 0 );
		xTimer2Started = xTimerStart( xTimer2, 0 );
	}

	if( xTimer1Started == pdPASS && xTimer2Started == pdPASS)
	{
		vTaskStartScheduler();
	}
#endif

	/*Create Queue */
	globalQueueHandle = xQueueCreate(QUEUE_SIZE, sizeof(MAX_STIRNG_LENGTH));

	if(globalQueueHandle == NULL)
	{
		printf("The queue was not created successfully\n");
		return 1;
	}else{
		//printf("Queue was created successfully\n");
	}

	/*Create 3 sender tasks and 1 receiver task */
	xSender1=  xTaskCreate (senderTask1,  "Sender1 Task", 1024, NULL, 1, &xSender1Handle);
	xSender2=  xTaskCreate (senderTask2,  "Sender2 Task", 1024, NULL, 1, &xSender2Handle);
	xSender3=  xTaskCreate (senderTask3,  "Sender3 Task", 1024, NULL, 2, &xSender3Handle);
	xReceiver= xTaskCreate (receiverTask, "Receiver Task",1024, NULL, 3, &xReceiverHandle);

	/*Check if all tasks were created successfully */
	if (xSender1 == pdFAIL || xSender2 == pdFAIL || xSender3 == pdFAIL || xReceiver == pdFAIL )
	{
		printf("One of the tasks was not created successfully\n");
		return 1;
	}else{
		//printf("All tasks were created successfully\n");
		/* All the tasks were created successfully */
	}


	/*Create semphores */
	xSemaphoreSender1  = xSemaphoreCreateBinary();
	xSemaphoreSender2  = xSemaphoreCreateBinary();
	xSemaphoreSender3  = xSemaphoreCreateBinary();
	xSemaphoreReceiver = xSemaphoreCreateBinary();

	/*check semaphores are created successfully*/
	if(xSemaphoreSender1 == NULL || xSemaphoreSender2 == NULL || xSemaphoreSender3 == NULL || xSemaphoreReceiver == NULL)
	{
		printf ("A semaphore was not created successfully\n");
		return 1;
	} else {
		/* All semaphores were created successfully */
		printf("All semaphores were created successfully\n");
	}

	/*Clear queue and configure Tsender of each task */
	resetHandler();


	/*Create four Timers*/
	xTimerSender1  = xTimerCreate("TimerOfSender_1", pdMS_TO_TICKS( gRandomTsender1) , pdTRUE, ( void * ) 1, prvSenderTimerCallback);
	xTimerSender2  = xTimerCreate("TimerOfSender_2", pdMS_TO_TICKS( gRandomTsender2) , pdTRUE, ( void * ) 2, prvSenderTimerCallback);
	xTimerSender3  = xTimerCreate("TimerOfSender_3", pdMS_TO_TICKS( gRandomTsender3) , pdTRUE, ( void * ) 3, prvSenderTimerCallback);
	xTimerReceiver = xTimerCreate("TimerOfReceiver", pdMS_TO_TICKS(Treceiver), pdTRUE, ( void * ) 3, prvReceiverTimerCallback);


	/*Check if software timers were created successfully */
	if ( (xTimerSender1 != NULL) && (xTimerSender1 != NULL) && (xTimerSender1 != NULL) && (xTimerSender1 != NULL))
	{
		printf("All timers were created successfully\n");
		/*Start software timers */
		xTimerSender1Started=  xTimerStart (xTimerSender1, 0);
		xTimerSender2Started=  xTimerStart (xTimerSender2, 0);
		xTimerSender3Started=  xTimerStart (xTimerSender3, 0);
		xTimerReceiverStarted= xTimerStart (xTimerReceiver, 0);
	} else {
		printf("One of the timers was not created successfully\n");
		return 1;
	}


	if (xTimerSender1Started == pdPASS && xTimerSender2Started == pdPASS && xTimerSender3Started == pdPASS && xTimerReceiverStarted == pdPASS)
	{
        printf("Starting the scheduler now\n");
		vTaskStartScheduler();
	}

	return 0;
}

#pragma GCC diagnostic pop

// ----------------------------------------------------------------------------

/*----------------------------------------------------------------Functions and Tasks Implementation-----------------------------------------------------------------------*/

void printingStatisticsOfSenderTasks (void)
{
	printf("\n\nThe statistics of Run number %d is\nThe total number of successfully sent messages is: %lu \nThe total number of blocked messages is: %lu\n",
			(gCurrentRunNumber+1), gNumOfSentMessagesOfSender1 + gNumOfSentMessagesOfSender2 + gNumOfSentMessagesOfSender3,
			gNumOfBlockedMessagesOfSender1 + gNumOfBlockedMessagesOfSender2 + gNumOfBlockedMessagesOfSender3);

	printf("The statistics of Sender 1 (Low priority task) is: \nThe number of sent messages is %lu \nThe number of blocked messages is %lu \n\n",
			gNumOfSentMessagesOfSender1, gNumOfBlockedMessagesOfSender1);

	printf("The statistics of Sender 2 (Low priority task) is: \nThe number of sent messages is %lu \nThe number of blocked messages is %lu \n\n",
			gNumOfSentMessagesOfSender2, gNumOfBlockedMessagesOfSender2);

	printf("The statistics of Sender 3 is (High priority task): \nThe number of sent messages is %lu \nThe number of blocked messages is %lu \n\n\n\n",
			gNumOfSentMessagesOfSender3, gNumOfBlockedMessagesOfSender3);

	/*increment the current gCurrentRunNumber to go to the next iteration*/
	++gCurrentRunNumber;

}

void resetHandler (void)
{
	printf("Implementing resetHandler function\n");
	/*Clear the queue */
	xQueueReset(globalQueueHandle);

	/*Clear Counters*/
	gNumOfSentMessagesOfSender1=0;
	gNumOfSentMessagesOfSender2=0;
	gNumOfSentMessagesOfSender3=0;

	gNumOfBlockedMessagesOfSender1=0;
	gNumOfBlockedMessagesOfSender2=0;
	gNumOfBlockedMessagesOfSender3=0;

	gNumOfReceivedMessages=0;


	/*Configure the values controlling the sender timer period Tsender */
	gRandomTsender1= generateRandomTsender(minBoundOfTsender[gCurrentRunNumber], maxBoundOfTsender[gCurrentRunNumber]);
	gRandomTsender2= generateRandomTsender(minBoundOfTsender[gCurrentRunNumber], maxBoundOfTsender[gCurrentRunNumber]);
	gRandomTsender3= generateRandomTsender(minBoundOfTsender[gCurrentRunNumber], maxBoundOfTsender[gCurrentRunNumber]);
}

void gameOver(void)
{
	/*Destroy all timers */
	if(xTimerDelete(xTimerSender1,0) == pdPASS && xTimerDelete(xTimerSender2,0) == pdPASS && xTimerDelete(xTimerSender3,0) == pdPASS && xTimerDelete(xTimerReceiver,0) == pdPASS )
	{
		/*All timers were destroyed successfully*/
	}else {
		printf("There was a problem deleting timers\n");
	}

	printf("Game Over\n");

	/*Delete all tasks*/
	vTaskDelete(xReceiverHandle);
	vTaskDelete(xSender1Handle);
	vTaskDelete(xSender2Handle);
	vTaskDelete(xSender3Handle);
		vTaskEndScheduler();

	/*exit the program*/
	 exit(0);

}

uint32_t generateRandomTsender(uint32_t minBound, uint32_t maxBound) {
    uint32_t range = maxBound - minBound + 1;
    uint32_t scaledRandom = (uint32_t)(((double)rand() / (double)RAND_MAX) * range);
    return scaledRandom + minBound;
}

# if 0
uint32_t generateRandomTsender (uint32_t minBound, uint32_t maxBound)
{
	uint32_t range= maxBound - minBound +1;
	return  (rand() % range) + minBound;

}
#endif
void senderTask1 (void* parameters)
{

	TickType_t currentTime;
	uint8_t message[MAX_STIRNG_LENGTH];

	for( ;; )
	{
		if (xSemaphoreTake(xSemaphoreSender1, portMAX_DELAY) == pdTRUE)
		{
			printf("Sender1 is about to try sending\n");

			currentTime = xTaskGetTickCount();
			snprintf(message, sizeof(message), "Time is %lu", currentTime);

			if (xQueueSend(globalQueueHandle, message, 0) == pdTRUE)
			{
				 printf("Sender 1 message sent\n");
				++gNumOfSentMessagesOfSender1;

			} else {
				 printf("Sender 1 message blocked\n");
				++gNumOfBlockedMessagesOfSender1;

			}

			/* change the period of the TimerOfSender_1*/
			gRandomTsender1= generateRandomTsender(minBoundOfTsender[gCurrentRunNumber], maxBoundOfTsender[gCurrentRunNumber] );
			if(xTimerChangePeriod (xTimerSender1, pdMS_TO_TICKS ( gRandomTsender1 ), 0) == pdPASS)
			{
				/* The command was sent successfully */
			} else {
				printf("Changing period of TimerOfSender_1 was not successful\n");
			}

		}

	}
}

void senderTask2 (void* parameters)
{
	TickType_t currentTime;
	uint8_t message[MAX_STIRNG_LENGTH];

	for( ;; )
	{
		if (xSemaphoreTake(xSemaphoreSender2, portMAX_DELAY) == pdTRUE)
		{
			//printf("Sender2 is about to try sending\n");

			currentTime = xTaskGetTickCount();
			snprintf(message, sizeof(message), "Time is %lu", currentTime);

			if (xQueueSend(globalQueueHandle, message, 0) == pdPASS)
			{
				// printf("Sender 2 message sent\n");
				++gNumOfSentMessagesOfSender2;

			} else {

				// printf("Sender 2 message blocked\n");
				++gNumOfBlockedMessagesOfSender2;

			}

			/* change the period of the TimerOfSender_1*/
			gRandomTsender2= generateRandomTsender(minBoundOfTsender[gCurrentRunNumber], maxBoundOfTsender[gCurrentRunNumber] );
			if(xTimerChangePeriod (xTimerSender2, pdMS_TO_TICKS ( gRandomTsender2), 0) == pdPASS)
			{
				/* The command was sent successfully */
			} else {
				printf("Changing period of TimerOfSender_2 was not successful\n");
			}

		}

	}
}

void senderTask3 (void* parameters)
{

	TickType_t currentTime;
	uint8_t message[MAX_STIRNG_LENGTH];

	for( ;; )
	{
		if (xSemaphoreTake(xSemaphoreSender3, portMAX_DELAY) == pdTRUE)
		{
			//printf("Sender3 is about to try sending\n");
			currentTime = xTaskGetTickCount();
			snprintf(message, sizeof(message), "Time is %lu", currentTime);

			if(xQueueSend(globalQueueHandle, message, 0) == pdTRUE)
			{
				//printf("Sender 3 message sent\n");
				++gNumOfSentMessagesOfSender3;

			} else {

                //printf("Sender 3 message blocked\n");
				++gNumOfBlockedMessagesOfSender3;

			}

			/* change the period of the TimerOfSender_1*/
			gRandomTsender3= generateRandomTsender(minBoundOfTsender[gCurrentRunNumber], maxBoundOfTsender[gCurrentRunNumber] );
			if(xTimerChangePeriod (xTimerSender3, pdMS_TO_TICKS ( gRandomTsender3), 0) == pdPASS)
			{
				/* The command was sent successfully */
			} else {
				printf("Changing period of TimerOfSender_3 was not successful\n");
			}

		}

	}
}

void receiverTask (void* parameters)
{
	uint8_t receivedMessage[MAX_STIRNG_LENGTH];

	for( ;; )
	{
		if (xSemaphoreTake(xSemaphoreReceiver, portMAX_DELAY) == pdTRUE)
		{
			if (xQueueReceive(globalQueueHandle, receivedMessage, 0) == pdTRUE)
			{
				printf("A message is received\n");
				++gNumOfReceivedMessages;

				if(gNumOfReceivedMessages == MAX_NUM_OF_RECEIVED_MESSAGES_PER_RUN)
				{
					printf("\n\n 1000 messages have been received\n");
					printingStatisticsOfSenderTasks ();

					/*Stop execution after all six runs are done*/
					if(gCurrentRunNumber == 6)
					{
						gameOver();
					}
					resetHandler();
				}
			}else{
				printf("No message is received\n");
			}
		}


	}
}

static void prvSenderTimerCallback( TimerHandle_t xTimer )
{
	if(xTimer == xTimerSender1)
	{
		 xSemaphoreGiveFromISR(xSemaphoreSender1, NULL);
	}else if(xTimer == xTimerSender2)
	{
		 xSemaphoreGiveFromISR(xSemaphoreSender2, NULL);
	}else
	{
		 xSemaphoreGiveFromISR(xSemaphoreSender3, NULL);
	}
}

